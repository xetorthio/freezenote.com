# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET		/send									Application.send

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

GET		/notes/new							Notes.displayForm
GET		/notes/created						Notes.created
GET		/notes/sendAll						Notes.sendAll
GET		/notes/last							Notes.last

GET		/login									Auth.login
GET		/fakeLogin								Auth.fakeLogin
GET		/fakeFacebookLogin						Auth.fakeFacebookLogin
GET		/login/google							Auth.signInWithGoogle
GET		/login/facebook							Auth.signInWithFacebook
GET		/login/facebook/done					Auth.signInWithFacebookReturn
GET		/logout									Auth.logout

GET		/users/{userId}/friends/facebook			Users.getFacebookFriends

POST	/notes								Notes.create

GET /robots.txt								Application.robots