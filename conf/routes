# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

GET		/capsulas/new							Capsulas.displayForm
GET		/capsulas/created						Capsulas.created
GET		/capsulas/last							Capsulas.last

GET		/login									Auth.login
GET		/fakeLogin								Auth.fakeLogin
GET		/login/google							Auth.signInWithGoogle

POST	/capsulas								Capsulas.create

